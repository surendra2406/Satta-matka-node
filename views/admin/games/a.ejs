<div class="row">
	<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
		<div class="card table-card">
			<div class="card-header pb-0">
				<div class="d-flex justify-content-between">
					<h4 class="card-title mg-b-0"><%= title %></h4>
					<a class="effect-btn btn btn-primary squer-btn mr-2 openPopupAddGames"  href="javascript:void(0);" data-href="<%= admin %>/add-games/0" role="button" data-toggle="modal">Add Games</a>	
				</div>
			</div>
			<div class="card-body">
				<div class="row filter_cls">
					<div class="form-group col-md-3">
						<select id="game_status" class="form-control">
							<option selected value="all">All</option>
							<option value="0">No</option>
							<option value="1">Yes</option>
						</select>
					</div>
					<!-- <div class="form-group col-md-3">
						<select id="game_market_status" class="form-control">
							<option selected value="all">All</option>
							<option value="0">Market Close</option>
							<option value="1">Market Open</option>
						</select>
					</div> -->
				</div>
				<div class="table-responsive">
					<table id="gamesList" class="table table-striped table-bordered" style="width:100%">
						<thead>
							<tr>
								<th>#</th>
								<th>Game Name</th>
								<th>Today Open</th>
								<th>Today Close</th>
								<th>Status</th>
								<th>Market Status</th>
								<th>Action</th>
							</tr>
						</thead>
					</table>
				</div>
				<div id="msg"></div>
			</div>
		</div>
	</div>
</div>

<!-- Add Games modal start -->
<div class="modal fade" id="addGamesModal" role="dialog" aria-hidden="true">
	<div class="modal-dialog modal-frame modal-top modal-lg" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title game_form_title"></h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>         
			</div>
			<div class="modal-body p-0 pt-2 games_body ">        
			
			</div>
		</div>
	</div>
</div>
<!-- Add Games modal end -->

<!-- Market Off Day Games Modal Start -->
<div class="modal fade" id="marketoffdayModal" tabindex="-1" role="dialog" aria-hidden="true">
	<div class="modal-dialog modal_right_side" role="document">
		<div class="modal-content col-12 col-xl-5">
			<div class="modal-header">
				<h5 class="modal-title">Market Off Day</h5><button class="close" type="button" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
			</div>
			<div class="modal-body market_off_day_model">
			
			</div>
		</div>
	</div>
</div>
<!-- Market Off Day Games Modal End -->

<!-- Active Inactive modal start -->
<div class="modal fade" id="gameFlashStatusModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
	<div class="modal-dialog modal-frame modal-top modal-md" role="document">
		<div class="modal-content ">
			<div class="modal-header">
				<h5 class="modal-title" id="exampleModalLongTitle">Game Highlight Status Confirmation</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
			</div>
			<div class="modal-body">
				<div class="row">
					<input type="hidden" name="type" id="type">
					<input type = "hidden" name="id" id="id">
					<input type = "hidden" name="table" id="table">
					<input type = "hidden" name="table_id" id="table_id">
					<input type = "hidden" name="statu_name" id="statu_name">
					<input type = "hidden" name="change_status_name" id="change_status_name">
					<div class="col-md-12">
						<p class="msg_type"></p>
					</div>
					<div class="col-md-12 mt-3">                                                  
						<button id="statusBtn" class="effect-btn btn btn-primary squer-btn active_cls" onclick="gameFlashStatusChange()"><i class="fa fa-spin fa-spinner mr-2" id="btn_spinner1" style="display:none"></i>Yes</button>
						<button class="effect-btn btn btn-danger squer-btn active_cls" data-dismiss="modal">No</button>                         
					</div>
					<div class="col-md-12">
						<div id="statusmsg"></div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- Active Inactive modal end -->